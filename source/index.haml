    .ft-page
      %h1 if, else, elsif

      %pre.ft-fragment
        %code.ruby
          :preserve
            def test_equality(a, b)
              if a == b
                puts "these are equals"
              elsif a > b
                puts "a is bigger"
              else
                puts "b is bigger"
              end
            end

      %pre.ft-fragment
        %code.ruby
          :preserve
            >> test_equality(1, 1)
            "these are equals"
            => nil

      %pre.ft-fragment
        %code.ruby
          :preserve
            >> test_equality(1, 42)
            "b is bigger"
            => nil

      %pre.ft-fragment
        %code.ruby
          :preserve
            unless a == b do_something() # equivalent to if not (a == b) do_something()

