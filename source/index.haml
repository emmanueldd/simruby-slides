      %p.ft-fragment
        Everything is true except false and nil
      %p.ft-fragment Boolean operators

      %pre.ft-fragment
        %code.ruby
          :preserve
            true and false # => false
            true and true  # => true
            true and nil   # => false
            0 && ""       # => true

      %pre.ft-fragment
        %code.ruby
          :preserve
            true or false # => true
